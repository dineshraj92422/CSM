<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssignmentActivity"
    android:background="@color/Mycolor1">

    <ImageView
        android:id="@+id/imgassign1"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_assignment"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/edittxt_insert"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgassign1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:hint="Subject"
        />

    <EditText
        android:id="@+id/edittxt_deadline"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgassign1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:hint="Deadline"
        />

    <Button
        android:id="@+id/btn_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edittxt_insert"
        android:layout_marginStart="253dp"
        android:layout_marginLeft="253dp"
        android:layout_marginBottom="1dp"
        android:text="@string/insert" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@+id/btn_insert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:scrollbars="vertical"
        android:layout_marginBottom="100dp"/>




</RelativeLayout>