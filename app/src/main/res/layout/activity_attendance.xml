<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendanceActivity"
    android:background="@color/Mainclr">

    <ImageView
        android:id="@+id/imgattend"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_attendance"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/edittxt_sub"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgattend"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:hint="Subject"
        />

    <Button
        android:layout_below="@+id/imgattend"
        android:id="@+id/btnatte_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edittxt_insert"
        android:layout_marginStart="253dp"
        android:layout_marginLeft="253dp"
        android:layout_marginBottom="1dp"
        android:text="@string/insert" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewatt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnatte_insert"
        />
</RelativeLayout>